<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kojonek2.adamzmuda.kalkulator.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display1"
            android:layout_row="0"
            android:layout_columnSpan="4"
            android:textSize="36sp"
            android:textAlignment="viewEnd" />

        <Button
            android:text="@string/ce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_ce"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:text="@string/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_c"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:text="@string/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_backspace"
            android:layout_row="1"
            android:layout_column="2"/>

        <Button
            android:text="@string/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_divide"
            android:layout_row="1"
            android:layout_column="3"/>

        <Button
            android:text="@string/_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_7"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_8"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_9"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_multiply"
            android:layout_row="2"
            android:layout_column="3"/>

        <Button
            android:text="@string/_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_6"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_subtract"
            android:layout_row="3"
            android:layout_column="3"/>
        <Button
            android:text="@string/_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="displayNumber" />

        <Button
            android:text="@string/_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_0"
            android:layout_row="5"
            android:layout_column="1"
            android:onClick="displayNumber" />

        <Button
            android:text="@string/_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_3"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add"
            android:layout_row="4"
            android:layout_column="3"/>
        <Button
            android:text="@string/changeSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_changeSign"
            android:layout_row="5"
            android:layout_column="0"/>

        <Button
            android:text="@string/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_point"
            android:layout_row="5"
            android:layout_column="2"/>

        <Button
            android:text="@string/_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_equals"
            android:layout_row="5"
            android:layout_column="3"/>

        <Button
            android:text="@string/_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_5"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="displayNumber"/>

        <Button
            android:text="@string/_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_4"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="displayNumber"/>

    </GridLayout>
</RelativeLayout>
